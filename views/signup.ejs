<%- include('partials/header'); -%>

<body>
    <section class="login-block-sec ">
        <div class="container">
            <div class="row d-flex justify-content-center align-items-center h-100">

                <div class="col-12 col-md-9 col-lg-7 col-xl-6 login-block">

                    <div class="card border border-2 border-dark rounded-3 mb-3" style="border-radius: 15px;">
                        <div class="card-body">

                            <%- include('messages.ejs') %>
                            <h2 class="text-uppercase text-center">Create an account</h2>

                            <form action="/signup" method="post">



                                <div class="form-outline">
                                    <input type="text" id="floatingInput" name="username"
                                        class="form-control form-control-lg border border-2 border-dark rounded-3" />
                                    <label class="form-label" for="floatingInput">username</label>
                                </div>


                                <div class="form-outline">
                                    <input type="text" id="floatingInput" name="email"
                                        class="form-control form-control-lg border border-2 border-dark rounded-3" />
                                    <label class="form-label" for="floatingInput">email</label>
                                </div>


                                <div class="form-outline">
                                    <input type="password" id="floatingPassword" name="userpassword"
                                        class="form-control form-control-lg border border-2 border-dark rounded-3" />
                                    <label class="form-label" for="floatingPassword">passwords</label>
                                </div>


                                <div class="form-outline">
                                    <input type="password" id="floatingPassword2" name="userpassword_2"
                                        class="form-control form-control-lg border border-2 border-dark rounded-3" />
                                    <label class="form-label" for="floatingPassword2">confirm passwords</label>
                                </div>


                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn btn-block btn-lg btn-dark me-3">register</button>

                                </div>


                                <p class="text-center mt-2 mb-0">already have an account? <a href="login"
                                        class=" fw-bolder"><u>login here</u></a></p>



                            </form>


                        </div>
                    </div>
                </div>

            </div>

        </div>
    </section>

    <div class="s-media pt-3">
        <span class="inline"><a class="text-decoration-none  ps-2" href="https://discord.gg/gkmAGEbsAG"><i class="fa-brands fa-discord"></i> discord</a>
        </span>
  
        <span class="inline"><a class="text-decoration-none  ps-2"
            href="https://github.com/ttran293/my-blog"><i class="fa-brands fa-github"></i> github</a>
        </span>
        </ol>
      </div>
      
    <div class="media fixed-bottom ">
        <div class="nav-b flex-column flex-md-row align-items-end">

            <nav class=" mt-2 mt-md-0 ms-md-auto pb-1">
                <a href="/" class="nav-link mx-2 text-decoration-none nav-a" id="compose"><i
                        class="fa-solid fa-arrow-rotate-left"></i></a>
                <a href="/compose" class="nav-link mx-2 text-decoration-none nav-a " id="compose"><i
                        class="fa-solid fa-plus"></i></a>
                <a href="/profile" class="nav-link mx-2 text-decoration-none nav-a" id="profile"><i
                        class="fa-solid fa-question"></i></a>


                <% if (!isLoggedIn) { %>
                <a href="/login" class="nav-link mx-2 text-decoration-none nav-a" id="logi"><i
                        class="fa-solid fa-angle-right"></i></a>
                <a href="/signup" class="nav-link mx-2 text-decoration-none nav-a" id="signu"><i
                        class="fa-solid fa-angle-up"></i></a>

                <%} else { %>
                <a href="/logout" class="nav-link mx-2 text-decoration-none nav-a " id="logout"><i
                        class="fa-solid fa-right-from-bracket"></i></a>
                <% } %>


            </nav>
        </div>
    </div>
    <script src="/scripts/scripts.js"></script>


</body>
<%- include('partials/footer'); -%>