<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Bootstrap 5 image Upload with Preview</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>

    <body>
        <img class="container col-md-6">
            <div class="mb-5">
                <form action="/images" method="POST" enctype="multipart/form-data">
                
                <label for="Image" class="form-label">Bootstrap 5 image Upload with Preview</label>
                <input type="text" name="example" id="" value="test">
                <input class="form-control" type="file" name="avatar" id="formFile">
                <!-- <button type="submit" onclick="clearImage()" class="btn btn-primary mt-3">Click me</button> -->
                <button type="submit" class="btn btn-primary mt-3">Click me</button>
                </form>
                
            </div>
        
        
            <img id="frame" src="/images/f5f7a9528df905d27e71c6fe291bc69d" class="img-fluid" alt="">
        </div>

        <script>
            function preview() {
                frame.src = URL.createObjectURL(event.target.files[0]);
            }
            function clearImage() {
                document.getElementById('formFile').value = null;
                frame.src = "";
            }
        </script>
    </body>
</html>  