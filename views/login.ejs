<%- include('partials/head'); -%>

<body>
    <video autoplay loop muted playsinline id="myVideo">
        <source src="/video/new.mp4" type="video/mp4">
    </video>
    <div class="main">
        <%- include('partials/header'); -%>
         <div class="auth-page d-flex flex-column justify-content-center align-items-center">
                <div class="auth-form card mx-auto">
                        <div class="card-body ">
                            <%- include('messages.ejs') %>
                            <h2 class="text-uppercase text-center">log in</h2>
                            <form action="/login" method="post">
                                <div class="form-floating">
                                    <input type="text" name="username"
                                        class="form-control border border-2 border-dark rounded-3 mb-3"
                                        id="floatingInput" placeholder="Username">
                                    <label for="floatingInput">username</label>
                                </div>
                                <div class="form-floating">
                                    <input type="password" name="password"
                                        class="form-control border border-2 border-dark rounded-3" id="floatingPassword"
                                        placeholder="Password">
                                    <label for="floatingPassword">password</label>
                                </div>
                                <button class="w-100 btn btn-lg btn-dark my-3" type="submit">sign in</button>
                                <p class="mt-4">
                                    no account? <a class="text-dark" href="/signup">sign up</a>
                                    <p>
                            </form>
                        </div>
                    </div>
            </div>

            <%- include('partials/bottom_nav'); -%>
    </div>
    <script src="/scripts/scripts.js"></script>
    
<%- include('partials/footer'); -%>
</body>



