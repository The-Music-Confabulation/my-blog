<%- include('partials/header'); -%>

<div class="container-fluid body-block">
    <div class="py-3 mb-3">
        <article class="blog-post">
            <h1 class="fw-bold"><%=title %></h1>
            <p class="blog-post-meta fs-5"><%=date %> by <a href="#" class="link-secondary fs-5"><%=author %></a></p>
            <p class="fs-4"><%=content %></p>
            <iframe width="100%" height="166" scrolling="no" frameborder="yes" allow="autoplay"
                src="https://w.soundcloud.com/player/?url=<%= url %>&amp;auto_play=false&amp;color=#000000&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;show_teaser=true"
                loading="lazy">
            </iframe>
        </article>
        <hr class="p-3" style="visibility: hidden;">

        <h2>comment section:</h2>
        <section>
            <div>
                <div class="d-flex justify-content-center">
                    <div class="col-md-12 col-lg-12 col-xl-12">
                        <div class="card">

                            <!-- Display comment here -->
                            <% post_comments.forEach(element => { %>
                            <div class="card-body">
                                <div class="">
                                    <div class="row">
                                        <div class="col-1">
                                            <svg class="rounded-circle shadow-1-strong me-3 comment_profile"
                                                viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path fill-rule="evenodd" clip-rule="evenodd"
                                                    d="M16 9C16 11.2091 14.2091 13 12 13C9.79086 13 8 11.2091 8 9C8 6.79086 9.79086 5 12 5C14.2091 5 16 6.79086 16 9ZM14 9C14 10.1046 13.1046 11 12 11C10.8954 11 10 10.1046 10 9C10 7.89543 10.8954 7 12 7C13.1046 7 14 7.89543 14 9Z"
                                                    fill="currentColor" />
                                                <path fill-rule="evenodd" clip-rule="evenodd"
                                                    d="M12 1C5.92487 1 1 5.92487 1 12C1 18.0751 5.92487 23 12 23C18.0751 23 23 18.0751 23 12C23 5.92487 18.0751 1 12 1ZM3 12C3 14.0902 3.71255 16.014 4.90798 17.5417C6.55245 15.3889 9.14627 14 12.0645 14C14.9448 14 17.5092 15.3531 19.1565 17.4583C20.313 15.9443 21 14.0524 21 12C21 7.02944 16.9706 3 12 3C7.02944 3 3 7.02944 3 12ZM12 21C9.84977 21 7.87565 20.2459 6.32767 18.9878C7.59352 17.1812 9.69106 16 12.0645 16C14.4084 16 16.4833 17.1521 17.7538 18.9209C16.1939 20.2191 14.1881 21 12 21Z"
                                                    fill="currentColor" />
                                            </svg>
                                        </div>

                                        <div class="col-9 comment_content">
                                            <p class="fw-bold text-primary mb-1"> <%=  element.comment_user %></p>
                                            <p class="m-0"> <%=  element.comment_content %> </p>

                                        </div>

                                        <div class="text-end comment_date ">
                                            <small class=" text-right text-decoration-underline"><%=  element.comment_date %></small>
                                        </div>
                                    </div>


                                </div>
                            </div>
                            <hr>
                            <% }) %>



                            <form class="card-footer py-3 border-0" method="post" action="/posts/<%= postID  %>">

                                <div class="row">
                                    <div class="col-1"> <svg
                                            class=" rounded-circle shadow-1-strong me-3 comment_profile"
                                            viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" clip-rule="evenodd"
                                                d="M16 9C16 11.2091 14.2091 13 12 13C9.79086 13 8 11.2091 8 9C8 6.79086 9.79086 5 12 5C14.2091 5 16 6.79086 16 9ZM14 9C14 10.1046 13.1046 11 12 11C10.8954 11 10 10.1046 10 9C10 7.89543 10.8954 7 12 7C13.1046 7 14 7.89543 14 9Z"
                                                fill="currentColor" />
                                            <path fill-rule="evenodd" clip-rule="evenodd"
                                                d="M12 1C5.92487 1 1 5.92487 1 12C1 18.0751 5.92487 23 12 23C18.0751 23 23 18.0751 23 12C23 5.92487 18.0751 1 12 1ZM3 12C3 14.0902 3.71255 16.014 4.90798 17.5417C6.55245 15.3889 9.14627 14 12.0645 14C14.9448 14 17.5092 15.3531 19.1565 17.4583C20.313 15.9443 21 14.0524 21 12C21 7.02944 16.9706 3 12 3C7.02944 3 3 7.02944 3 12ZM12 21C9.84977 21 7.87565 20.2459 6.32767 18.9878C7.59352 17.1812 9.69106 16 12.0645 16C14.4084 16 16.4833 17.1521 17.7538 18.9209C16.1939 20.2191 14.1881 21 12 21Z"
                                                fill="currentColor" />
                                        </svg></div>


                                    <div class="col-9">
                                        <textarea class="form-control" id="textAreaExample" rows="4"
                                            style="background: #fff;" name="commentContent"></textarea>
                                        <label class="form-label" for="textAreaExample">Message</label>

                                        <input class="form-control text-muted" type="text" name="commentUsername">
                                        <label class="form-label">Name</label>

                                        <div class=" mt-2 pt-1">
                                            <button type="submit" class="btn btn-dark btn-lg">Post comment</button>
                                        </div>
                                    </div>


                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

</div>

<%- include('partials/footer'); -%>