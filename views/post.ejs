<%- include('partials/head'); -%>

<body>
  <video autoplay loop muted playsinline id="myVideo">
    <source id="vid-source" src="/video/new.mp4" type="video/mp4" />
  </video>

  <div class="main">
    <%- include('partials/header'); -%>
    <div class="mb-5" >
      <div class="pb-3 mb-5">
        <article class="p-3">
          <h2 class="fw-bold"><%=title %></h2>
          <span class="fw-light fs-6"
            ><%=date %> by
            <a
              href="/profile/<%= author %>"
              class="text-decoration-none fs-6 fw-bold"
              ><%=author %></a
            >
          </span>
          <p class=""><%-content %></p>

          <hr style="visibility: hidden" />
          <% if (url) { %>
          <div class="ratio ratio-16x9 mb-3">
            <iframe
              src="https://www.youtube.com/embed/<%= url %>"
              title="YouTube video"
              allowfullscreen
              frameborder="0"
            ></iframe>
          </div>
          <%} %>
        </article>
        <hr class="p-3" style="visibility: hidden" />

        <section>
          <div class="comment-section">
            <div class="">
              <div class="col-md-12 col-lg-12 col-xl-12">
                <% post_comments.forEach(element => { %>
                <div class="card mt-3">
                  <!-- Display comment here -->
                  <div class="card-body">
                    <div class="">
                      <div class="row d-flex align-items-center">
                        <div class="col-1">
                          <!-- <svg  -->
                          <svg
                            class="rounded-circle shadow-1-strong me-3 comment_profile"
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            fill="currentColor"
                            class="bi bi-person"
                            viewBox="0 0 16 16"
                          >
                            <path
                              d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"
                            />
                          </svg>
                        </div>

                        <div class="col-9 comment_content">
                          <span class="text-decoration-none mt-0 fw-bold">
                            <a
                              href="/profile/<%=  element.comment_user %>"
                              class="text-decoration-none"
                              ><%= element.comment_user %></a
                            >
                          </span>
                          <span class="mb-0">
                            <%= element.comment_content %>
                          </span>
                        </div>

                        <div class="text-end comment_date">
                          <small
                            class="text-right text-decoration-underline fw-bold"
                            ><%= element.comment_date %></small
                          >
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <% }) %>
              </div>
            </div>
          </div>
        </section>

        <section>
          <div class="comment-section">
            <div class="">
              <div class="col-md-12 col-lg-12 col-xl-12">
                <div class="card mt-3">
                  <div class="card-body">
                    <div class="">
                      <div class="row">
                        <form
                          class=""
                          method="post"
                          action="/comments/post/<%= postID  %>"
                        >
                          <div class="row">
                            <div class="col-13">
                              <textarea
                                class="form-control border border-2 border-dark rounded-3"
                                id="textAreaExample"
                                rows="4"
                                name="commentContent"
                              ></textarea>
                              <label
                                class="form-label mt-2"
                                for="textAreaExample"
                                >Message</label
                              >
                              <button type="submit" class="btn">
                                <i class="fa-solid fa-arrow-turn-up"></i>
                              </button>
                            </div>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
    <%- include('partials/bottom_nav'); -%>
  </div>

  <script src="/scripts/scripts.js"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"
  ></script>

  <%- include('partials/footer'); -%>
</body>
