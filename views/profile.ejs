<%- include('partials/head'); -%>


<body>
    <video autoplay loop muted playsinline id="myVideo">
        <source src="/video/new.mp4" type="video/mp4" />
    </video>
    <div class="main">
        <%- include('partials/header'); -%>
        <div class="justify-content-center align-items-center">
           <div class="card login-block">
                        <div class="card-body">
                            <h2 class="text-uppercase text-center">Profile</h2>
                            <div class="image d-flex flex-column justify-content-center">
                                <div class="">
                                    <div class="profile-edit mt-3">
                                        <% if (current_user_id == id && isLoggedIn) { %>
                                        <button class="border-0 rounded-circle" style="background:rgb(255, 255, 255)"
                                            data-bs-toggle="modal" data-bs-target="#editprofilePic">
                                            <img
                                                src="/images/60df8fff120ed6252f35bd96955a2cb5"
                                                alt="mdo"
                                        
                                                style="vertical-align: middle;
                                                    width: 108px;
                                                    height: 108px;
                                                    border-radius: 50%;"
                                                />
                                        </button>
                                        <span class="fw-bold fs-4 me-3">@<%= username %> </span>
                                        <button type="button  flex-fill" class="btn btn-outline-dark mx-auto"
                                        data-bs-toggle="modal" data-bs-target="#editprofile">
                                            Edit Profile
                                        </button>

                    
                                        <%} else {%>
                                        <span class="fw-bold fs-4 me-3">@<%= username %> </span>    
                                        <button type="button" class="btn btn-dark mx-auto profile-pic">
                                            <i class="fa-solid fa-cloud"></i>
                                        </button>
                                        <%}%>
                                         
                                        <% if (current_user_id != id && current_user_id!=null) { %>
                                        <% if (!alreadyFollow) { %>
                                        <button id="follow-btn" class="btn"
                                            onclick="updateFollowing('<%= username %>', '<%= current_user_id %>'); this.disabled=true;">
                                            Follow
                                        </button>
                                        <%} else {%>
                                        <button id="" class="btn border-0">
                                            <i class="fa-solid fa-circle-check"></i>
                                        </button>
                                        <%}%> <%}%>
                                        <hr />
                                        <button class="button-profile text-center rounded">
                                            <span id="" class="fw-bold"><%= posts.length %></span>
                                            <span> posts</span>
                                        </button>

                                        <button type="button" class="button-profile text-center rounded"
                                            data-bs-toggle="modal" data-bs-target="#staticBackdrop1">
                                            <span id="follower-num" class="fw-bold"><%= followers.length %></span>
                                            <span> followers</span>
                                        </button>

                                        <div class="modal fade" id="staticBackdrop1" data-bs-backdrop="static"
                                            data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
                                            aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="staticBackdropLabel">
                                                            Followers
                                                        </h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                            aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <% followers.forEach(element => { %>

                                                        <p>
                                                            <a class="text-dark text-decoration-none fw-bold"
                                                                href="/profile/<%= element.follower_username %>"><i
                                                                    class="fa-solid fa-cloud-arrow-down"></i>
                                                                <%= element.follower_username %></a>
                                                        </p>
                                                        <% }) %>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">
                                                            close
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="button" class="button-profile text-center rounded"
                                            data-bs-toggle="modal" data-bs-target="#staticBackdrop2">
                                            <span id="" class="fw-bold"><%= following.length %></span>
                                            <span> following</span>
                                        </button>

                                        <div class="modal fade" id="staticBackdrop2" data-bs-backdrop="static"
                                            data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
                                            aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="staticBackdropLabel">
                                                            following
                                                        </h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                            aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <% following.forEach(element => { %>
                                                        <p>
                                                            <a class="text-dark text-decoration-none fw-bold"
                                                                href="/profile/<%=  element.following_username %>">
                                                                <i class="fa-solid fa-cloud-arrow-up"></i>
                                                                <%= element.following_username %></a>
                                                        </p>
                                                        <% }) %>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">
                                                            close
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="modal fade" id="editprofile" data-bs-backdrop="static"
                                    data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
                                    aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <form action="/profile" method="post">
                                                <input type="hidden" name="username" value="<%= username %>" />

                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="staticBackdropLabel">
                                                        edit profile
                                                    </h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="form-outline mt-3">
                                                        <label class="form-label" for="floatingInput">full name</label>
                                                        <input type="text" id="floatingInput" name="nameEdit"
                                                            value="<%= userFullname %>"
                                                            class="form-control form-control-lg border border-2 border-dark rounded-3" />
                                                    </div>

                                                    <div class="form-outline">
                                                        <label class="form-label mt-3" for="floatingInput">bio</label>
                                                        <textarea
                                                            class="form-control border border-2 border-dark rounded-3"
                                                            rows="5" cols="30" name="bioEdit"><%=info %></textarea>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">
                                                        close
                                                    </button>
                                                    <button type="submit" class="btn btn-primary">
                                                        submit
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>


                                <div class="modal fade" id="editprofilePic" data-bs-backdrop="static"
                                    data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
                                    aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <form action="/images" method="POST" enctype="multipart/form-data">
                                                <input type="hidden" name="username" value="<%= current_user_id %>" />

                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="staticBackdropLabel">
                                                        change profile photo 
                                                    </h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="form-outline mt-3">
                                                        <label class="form-label" for="floatingInput">upload a photo</label>
                                                        <input class="form-control" type="file" name="avatar" id="formFile">
                                                      

                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">
                                                        close
                                                    </button>
                                                    <button type="submit" class="btn btn-primary">
                                                        submit
                                                    </button>
                                                </div>
                                            </form>
                                            <!-- <script>
                                                function clearImage() {
                                                    document.getElementById('formFile').value = null;
                                                    document.getElementById('formFile').onclick = null;
                                                    frame.src = "";
                                                }
                                            </script> -->
                                        </div>
                                    </div>
                                </div>

                                <div class="flex-row justify-content-center align-items-center mt-3">
                                    <span class="number"><%= userFullname %></span>
                                </div>

                                <div class="flex-row justify-content-center align-items-center mt-3">
                                    <span class="number"><%= info %></span>
                                </div>

                                <div class="flex-row justify-content-center align-items-center mt-3">
                                    <span class="number">Joined <%= dateJoin %></span>
                                </div>
    
                                <div class="mt-3 mb-3">
                                    <div class="row g-2">
                                        <% for( let index = 0; index <  posts.length; index++ ) { %>
                                        <div class="col-6">
                                            <div class="p-1">
                                                <a href="/posts/<%=posts[index]._id  %>" class="text-dark text-decoration-none fw-bold ">
                                                    <%=posts[index].title  %></a>
                                               <i class="fa-solid fa-heart ms-2"></i> <%=posts[index].like.length%>
                                               <i class="fa-solid fa-message ms-2"></i> <%=posts[index].comments.length%>
                                            </div>
                                        </div>
                                        <% } %> 
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
        </div>
        
        <%- include('partials/bottom_nav'); -%>
    </div>


    <script src="/scripts/scripts.js"></script>
</body>
<%- include('partials/footer'); -%>