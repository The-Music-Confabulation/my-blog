<%- include('partials/header'); -%>

<body>
  <div class="container-fluid body-block">
    <div class="article-blog">
      <div class="row">
        <div class="col-md-2">
          <div class="position-sticky row" style="top: 2rem;">
            <div class=" mb-3 rounded about-main">
              <h3 class="">about</h3>
              <p class="mb-0 ps-2">Introduce others about your favorite artists.</p>
            </div>


            <div class=" some-main">
              <h3 class="">social media</h3>
              <ol class="list-unstyled">
                <li><a class="text-decoration-none text-dark ps-2" href="">instagram</a></li>
                <li><a class="text-decoration-none text-dark ps-2"
                    href="https://www.youtube.com/channel/UCnMd6b1tXn4DT8aNgo5wLSA/playlists">youtube</a></li>
                <li><a class="text-decoration-none text-dark ps-2" href="https://github.com/ttran293/my-blog">github</a></li>

              </ol>
            </div>


            <div class="theme-settings">
              <h3 class="">themes</h3>
              <div class="theme-switches">
                <div data-theme="light" class="switch" id="switch-1"></div>

                <div data-theme="cadetblue" class="switch inline-block" id="switch-2"></div>

                <div data-theme="coral" class="switch inline-block" id="switch-3"></div>

                <div data-theme="grey" class="switch inline-block" id="switch-4"></div>

              </div>
            </div>





          </div>
        </div>
        <div class="col-md-10">

          <% for  (var a = 0; a < songs.length; a++) { %>
          <article class="blog-post border border-2 border-dark rounded-3 p-3 mb-3 ">

            <h2 class="blog-post-title ">
              <a class="text-decoration-none text-dark" href="/posts/<%= songs[a]._id %>"><%=songs[a].title %></a>
            </h2>

            <p class="font-weight-light"><%=songs[a].date %> by
              <a href="#" class="text-decoration-none text-dark"><%= songs[a].author %></a>
            </p>
            <p class="fs-4"><%- songs[a].content.substring(0,500) + "..." %></p>

            <hr style="visibility: hidden;">




            <form action="/<%= songs[a]._id %>/like" method="post">
              <span> <%= songs[a].like %> </span>
              <button type="submit" class="like-button">
                <img src="https://img.icons8.com/material-outlined/24/000000/filled-like.png" />
              </button>
              <span class="fw-bold"><%=songs[a].comments.length %> <a href="/posts/<%= songs[a]._id %>"><img
                    src="https://img.icons8.com/material-outlined/24/000000/comments--v1.png" /></a></span>
            </form>




          </article>
          <% } %>
          <div class="page-nav">
            <nav aria-label="Page navigation ">
              <ul class="pagination">
                <li class="page-item">
                  <a class="page-link text-decoration-none text-dark fw-bold" href="?page=1" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                  </a>
                </li>
                <% for  (var a = 1; a <= pages; a++) { %>
                <li class="page-item "><a class="page-link text-decoration-none text-dark  fw-bold"
                    href="?page=<%=a; %>"><%= a; %></a></li>
                <% } %>

                <li class="page-item">
                  <a class="page-link text-decoration-none text-dark fw-bold" href="?page=<%=pages%>" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                  </a>
                </li>
              </ul>
            </nav>

          </div>

        </div>


      </div>
    </div>




    <div class="theme-button">
      <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#exampleModal">
        settings
      </button>

      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">settings</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="theme-settings-mobile">
                <h3 class="">themes</h3>
                <div class="theme-switches">
                  <div data-theme="light" class="switch" id="switch-1"><span class="ps-5 fw-bold">light</span></div> 

                  <div data-theme="cadetblue" class="switch" id="switch-2"><span class="ps-5 fw-bold">cadetblue</span></div>

                  <div data-theme="coral" class="switch" id="switch-3"><span class="ps-5 fw-bold">coral</span></div>

                  <div data-theme="grey" class="switch " id="switch-4"><span class="ps-5 fw-bold">grey</span></div>

                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-dark" data-bs-dismiss="modal">close</button>
              <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
            </div>
          </div>
        </div>
      </div>
    </div>



    <script src="/scripts/scripts.js"></script>
</body>
<%- include('partials/footer'); -%>