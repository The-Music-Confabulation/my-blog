<%- include('partials/header'); -%>

<body>
  <div class="container">
    <div class="mb-3 ">
      <div class="row g-5">
        <div class="col-md-10 ">
          <!-- <h2 class="pb-4 mb-4 fst-italic">
            Artists
          </h2> -->

          <% for  (var a = 0; a < songs.length; a++) { %>
          <article class="blog-post border border-2 rounded p-3 mb-3 ">

            <p class="h2 blog-post-title text-lowercase"><%=songs[a].title %></p>
            
            <small class="font-weight-light">Today by <a href="#">Mango Sago</a></small>
            <p><%=songs[a].content.substring(0,200) + "..." %>
              <a href="/posts/<%= songs[a]._id %>">Read more</a>
            </p>
            <iframe width="100%" height="166" scrolling="no" frameborder="yes" allow="autoplay"
              src="https://w.soundcloud.com/player/?url=<%= songs[a].url %>&amp;auto_play=false&amp;color=#000000&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;show_teaser=true"
              loading="lazy">
            </iframe>
          </article>
          <% } %>

          <nav aria-label="Page navigation example">
            <ul class="pagination">
              <li class="page-item">
                <a class="page-link" href="?page=1" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
              <% for  (var a = 1; a <= pages; a++) { %>
              <li class="page-item"><a class="page-link" href="?page=<%=a; %>"><%= a; %></a></li>
              <% } %>

              <li class="page-item">
                <a class="page-link" href="?page=<%=pages%>" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            </ul>
          </nav>
        </div>

        <div class="col-md-2">
          <div class="position-sticky" style="top: 2rem;">
            <div class="p-4 mb-3 rounded">
              <h4 class="fst-italic">About</h4>
              <p class="mb-0">Introduce others about your favorite artists.</p>
            </div>

            <!-- <div class="p-4">
              <h4 class="fst-italic">Archives</h4>
              <ol class="list-unstyled mb-0">
                <li><a href="#">March 2021</a></li>
                <li><a href="#">February 2021</a></li>
                <li><a href="#">January 2021</a></li>
              </ol>
            </div> -->

            <div class="p-4">
              <h4 class="fst-italic">Social media</h4>
              <ol class="list-unstyled">
                <li><a href="https://github.com/ttran293/my-blog">GitHub</a></li>
                <li><a href="https://www.youtube.com/channel/UCnMd6b1tXn4DT8aNgo5wLSA/playlists">Youtube</a></li>
              </ol>
            </div>
          </div>
        </div>
      </div>
    </div>


  </div>



</body>
<%- include('partials/footer'); -%>